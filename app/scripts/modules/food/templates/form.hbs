<div class="col-lg-12">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-lg-2 control-label" for="foodTitle">Title</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" id="foodTitle" placeholder="Enter title" value="{{ title }}">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="measureType">Measure</label>
            <div class="col-lg-4">
                <select id="measureType" name="measureType" class="form-control">
                    {{#each measureOptions }}
                        <option value="{{ title }}"{{#if title}} selected="selected"{{/if}}>{{ title }}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="supplier">Supplier</label>
            <div class="col-lg-4">
                <select id="supplier" name="supplier" class="form-control">
                    {{#each suppliers }}
                        <option value="{{ name }}">{{ name }}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="foodPictureInput">Picture</label>
            <div class="col-lg-4">
        <span class="btn btn-default btn-file">
            Choose file... <input type="file" id="foodPictureInput" name="foodPicture"
                                  onchange="$('#upload-file-info').html($(this).val())">
        </span>
                <span class='label label-info' id="upload-file-info"></span>
                <p class="help-block">Please upload *.png files!</p>
            </div>
        </div>
        <div class="col-lg-6 text-right">
            <button type="submit" id="submit_food" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
